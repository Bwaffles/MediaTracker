<UserControl x:Class="MediaTracker.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MediaTracker.Home"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#333">
        <TextBox HorizontalAlignment="Left" Height="35" Margin="100,186,0,0" VerticalAlignment="Top" Width="525" FontSize="24" Text="{Binding SearchText}" />
        <Button Content="Search" HorizontalAlignment="Left" Margin="625,186,0,0" VerticalAlignment="Top" Width="75" Height="35" FontSize="20" Command="{Binding SearchClick}" />
    </Grid>
</UserControl>