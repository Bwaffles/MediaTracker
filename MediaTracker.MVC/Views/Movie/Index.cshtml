@model IEnumerable<Application.Movies.Queries.Search.SearchListItemModel>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Movie"))
{
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3 align-self-center">
                <div class="input-group">
                    <input class="form-control form-control-lg" type="text" name="SearchString" placeholder="Search Movie..." />
                    <div class="input-group-append">
                        <button class="btn btn-outline-dark" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <br />
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="card col-8 offset-2">
                    <div class="card-body">
                        @Html.ActionLink(@item.Title, "Details", new { id = item.Id })
                    </div>
                </div>
            </div>
        }
    </div>
}